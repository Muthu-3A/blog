<!DOCTYPE html>
<html>
    <head>
        <title>FergBlog</title>
        <link rel="stylesheet" href="/style.css">
    </head>

    <body>
        <header class="navbar">
            <!--- <a href="/" class="logo-link"><img src="/logo.jpg" alt="FergBlog Logo" class="logo"></a> --->
            <h1>Ferguson's Blog</h1>
        </header>

        <div class="site">

            <div class="post-list">
            <% if (posts && posts.length) { %>
                <% posts.forEach(post => { %>
                    <div class="post-card">
                        <h2><a href="/post/<%= post.id %>"><%= post.title %></a></h2>
                        <p class="date"><%= post.date %></p>
                        <p class="description"><%= post.description || (post.content && post.content.substring(0, 120)) %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No posts yet.</p>
            <% } %>
        </div>
        </div>
    </body>
</html>